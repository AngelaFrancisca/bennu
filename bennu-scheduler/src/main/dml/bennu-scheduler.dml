package pt.ist.bennu.scheduler.domain;

class SchedulerSystem {
}

class Task {
	DateTime lastRun;
	DateTime lastRunStart;
	DateTime lastRunEnd;
}

class TaskSchedule {
	Integer minute;
	Integer hour;
	Integer day;
	Integer month;
	Integer dayofweek;
}

class TaskLog {
	DateTime taskStart;
	DateTime taskEnd;
	String output;
	Boolean successful;
}

relation BennuSchedulerSystem {
	SchedulerSystem playsRole schedulerSystem {
		multiplicity 0..1;
	}
	.pt.ist.bennu.core.domain.Bennu playsRole bennu {
		multiplicity 1..1;
	}
}

relation SchedulerSystemTask {
	SchedulerSystem playsRole schedulerSystem;
	Task playsRole task {
		multiplicity *;
	}
}

relation SchedulerSystemPendingTask {
	SchedulerSystem playsRole schedulerSystemFromPendingTask;
	Task playsRole pendingTask;
}

relation TaskPendingTask {
	Task playsRole previousTask;
	Task playsRole nextTask;
}

relation TaskTaskSchedule {
	Task playsRole task;
	TaskSchedule playsRole taskSchedule {
		multiplicity *;
	}
}

relation TaskTaskLog {
	Task playsRole task;
	TaskLog playsRole taskLog {
		multiplicity *;
	}
}
