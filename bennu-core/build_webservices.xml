<?xml version="1.0" encoding="UTF-8"?>
<project name="bennu" basedir="." default="init">
	<property name="enunciate.home" value="/home/sfbs/bin/enunciate-1.21"/>
	<path id="certdocsis.src">
		<fileset dir="src_certdocsis/">
			<include name="**/*.java"/>
		</fileset>
		<fileset dir="src_gen/">
			<include name="**/*.java"/>
		</fileset>
	</path>
	<path id="enunciate.classpath">
		<fileset dir="${enunciate.home}/lib">
			<include name="*.jar"/>
		</fileset>
		<!--include (optional) spring module-->
		<fileset dir="${enunciate.home}/lib/modules/spring">
			<include name="*.jar"/>
		</fileset>
		<fileset dir="${java.home}">
			<include name="lib/tools.jar"/>
		</fileset>
		<fileset dir="build_certdocsis/WEB-INF/lib">
			<include name='*.jar'/>
		</fileset>
		<fileset dir=".">
			<include name="deploy/certdocsis.war"/>
		</fileset>
	</path>
	<taskdef name="enunciate" classname="org.codehaus.enunciate.main.EnunciateTask">
		<classpath refid="enunciate.classpath"/>
	</taskdef>	  
	<target name="init">
	</target>
	<target name="docs">
		<enunciate basedir=".." configFile="enunciate.xml">
			<include name="modules/certdocsis/src/**/*.java"/>
			<include name="myorg/src_certdocsis/**/*.java"/>
			<include name="myorg/src/**/*.java"/>
			<classpath refid="enunciate.classpath"/>
			<export artifactId="docs" destination="target/docs"/>
		</enunciate>
	</target>
	<target name='war'>
		<enunciate basedir=".." buildDir="build_ws">
			<include name="modules/certdocsis/src/**/*.java"/>
			<include name="myorg/src_certdocsis/**/*.java"/>
			<include name="myorg/src/**/*.java"/>
			<classpath refid="enunciate.classpath"/>
			<export artifactId="war.file" destination="myapp.war"/>
		</enunciate>
	</target>
</project>
