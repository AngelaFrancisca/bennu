	<slot name="allowedChild.type" key="label.connection.rule.allowed.child.type" read-only="true" />
</schema>

<schema name="organization.ConnectionRuleBean" type="myorg.domain.organization.ConnectionRule$ConnectionRuleBean" 
	bundle="ORGANIZATION_RESOURCES">
	<slot name="accountabilityType.type" key="label.accountability.type" read-only="true" />
	<slot name="parent" layout="menu-select" key="label.connection.rule.allowed.parent.type" validator="pt.ist.fenixWebFramework.renderers.validators.RequiredValidator">
		<property name="providerClass" value="myorg.presentationTier.renderers.organization.PartyTypesProvider" />
		<property name="choiceType" value="myorg.domain.organization.PartyType" />
		<property name="format" value="${type}" />
		<property name="sortBy" value="type" />
	</slot>
	<slot name="child" layout="menu-select" key="label.connection.rule.allowed.child.type" validator="pt.ist.fenixWebFramework.renderers.validators.RequiredValidator">
		<property name="providerClass" value="myorg.presentationTier.renderers.organization.PartyTypesProvider" />
		<property name="choiceType" value="myorg.domain.organization.PartyType" />
		<property name="format" value="${type}" />
		<property name="sortBy" value="type" />
	</slot>
</schema>